@model SDG.SpookyWisconsin.WebUI.ViewModels.NewsletterVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NewsLetter.HauntedEventId" class="control-label"></label>
                <input asp-for="NewsLetter.HauntedEventId" class="form-control" />
                <span asp-validation-for="NewsLetter.HauntedEventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsLetter.HauntedEventName" class="control-label"></label>
                <select asp-for="NewsLetter.HauntedEventId" class="form-control"
                        asp-items="@(new SelectList(Model.HauntedEvents, "Id", "Name"))"></select>
                <span asp-validation-for="NewsLetter.HauntedEventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsLetter.Description" class="control-label"></label>
                <input asp-for="NewsLetter.Description" class="form-control" />
                <span asp-validation-for="NewsLetter.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsLetter.Date" class="control-label"></label>
                <input asp-for="NewsLetter.Date" class="form-control" />
                <span asp-validation-for="NewsLetter.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
