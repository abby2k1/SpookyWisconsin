@model SDG.SpookyWisconsin.WebUI.ViewModels.ParticipantVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Participant.Id" />
            <div class="form-group">
                <label asp-for="Participant.HauntedEventId" class="control-label"></label>
                <input asp-for="Participant.HauntedEventId" class="form-control" />
                <span asp-validation-for="Participant.HauntedEventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.HauntedEventName" class="control-label"></label>
                <select asp-for="Participant.HauntedEventId" class="form-control"
                 asp-items="@(new SelectList(Model.HauntedEvents, "Id", "Name"))"></select>
                <span asp-validation-for="Participant.HauntedEventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.CustomerId" class="control-label"></label>
                <input asp-for="Participant.CustomerId" class="form-control" />
                <span asp-validation-for="Participant.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
